@model EPI_USE.Models.Employee
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Employee Details</h2>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">

                    <ul>
                        <li><label style="font-weight: bold">Employee Number: </label> @Html.DisplayFor(model => model.EmployeeNumber)</li>
                        <li><label style="font-weight: bold">Name: </label>  @Html.DisplayFor(model => model.Name)</li>
                        <li><label style="font-weight: bold">Surname: </label>  @Html.DisplayFor(model => model.Surname)</li>
                        <li><label style="font-weight: bold">Email Address: </label>  @Html.DisplayFor(model => model.EmailAddress)</li>
                        <li><label style="font-weight: bold">Birth Date: </label>  @Html.DisplayFor(model => model.BirthDate)</li>
                        <li><label style="font-weight: bold">Salary: </label>  @Html.DisplayFor(model => model.Salary)</li>
                        <li><label style="font-weight: bold">Position: </label>  @Html.DisplayFor(model => model.Position)</li>
                        <li><label style="font-weight: bold">Manager: </label>  @Html.DisplayFor(model => model.ReportingLineManager)</li>
                    </ul>

                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.EmployeeNumber" class="btn btn-primary">Edit</a>
                        <a asp-action="AllEmployees" class="btn btn-warning">Back</a>
                    </div>

                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </div>
</div>
